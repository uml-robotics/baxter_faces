"""

  Baxter Face magic

"""

import roslib
roslib.load_manifest('baxter_faces')
import rospy

import baxter_interface
import baxter_faces

from baxter_interface import CHECK_VERSION

if __name__ == '__main__':
    import sys
    rospy.init_node("baxter_face")
    baxter_faces.FaceImage().set_image("dan")
    rospy.spin()
